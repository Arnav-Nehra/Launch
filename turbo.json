{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "check-types"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "env":["DATABASE_URL"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "clean": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "db:generate": {
    "cache": false
  },
  "db:migrate": {
    "cache": false,
    "persistent": true 
  },
  "db:deploy": {
    "cache": false
  }
  }
}
